---
import BaseLayout from './BaseLayout.astro';

const { post } = Astro.props;
const { title, description, pubDate, category, heroImage } = post.data;
---

<BaseLayout
  title={title}
  description={description}
  sidebar="post"
  post={post}
>
  <article class="post">

    <!-- HERO -->
    <header class="post-hero">
      <div class="hero-text">
        <p class="author">Steven</p>

        <h1>{title}</h1>

        {description && (
          <p class="excerpt">{description}</p>
        )}

        {category && (
          <span class="category">{category}</span>
        )}
      </div>

      {heroImage && (
        <div class="hero-image">
          <img
            src={heroImage.src ?? heroImage}
            alt={title}
            loading="eager"
          />
        </div>
      )}
    </header>

    <!-- BODY (KHÔNG SIDEBAR Ở ĐÂY) -->
    <main class="post-content">
      <slot />

      <div class="post-meta">
        {category && <span class="category">{category}</span>}
        {pubDate && (
          <time datetime={pubDate.toISOString()}>
            {pubDate.toLocaleDateString()}
          </time>
        )}
      </div>
    </main>

  </article>
</BaseLayout>

<style>
.post {
  max-width: 1200px;
  margin: 0 auto;
  padding: 4rem 1.5rem;
}

.post-hero {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: center;
  margin-bottom: 5rem;
}

.hero-text h1 {
  font-size: 3rem;
  line-height: 1.2;
  margin-bottom: 1.5rem;
}

.excerpt {
  font-size: 1.1rem;
  color: #555;
  margin-bottom: 1.5rem;
}

.category {
  display: inline-block;
  padding: 0.4rem 0.8rem;
  border-radius: 999px;
  background: #eef;
  font-size: 0.8rem;
}

.hero-image img {
  width: 100%;
  height: auto;
  border-radius: 20px;
  display: block;
}

.post-content {
  max-width: 700px;
  line-height: 1.75;
}

.post-content p {
  margin-bottom: 1.5rem;
}

.post-meta {
  margin-top: 3rem;
  display: flex;
  gap: 1rem;
  font-size: 0.9rem;
  color: #777;
}
</style>
