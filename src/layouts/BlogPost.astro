---
import BaseLayout from './BaseLayout.astro';

const { post } = Astro.props;
const { title, description, pubDate, category, heroImage } = post.data;
---

<BaseLayout title={title} description={description}>
  <article class="post">

    <!-- HERO -->
    <header class="post-hero">
      <div class="hero-text">
        <p class="author">Steven</p>

        <h1>{title}</h1>

        {description && (
          <p class="excerpt">{description}</p>
        )}

        {category && (
          <span class="category">{category}</span>
        )}
      </div>

      {heroImage && (
        <div class="hero-image">
          <img src={heroImage.src ?? heroImage} alt={title} loading="eager" />
        </div>
      )}
    </header>

    <!-- BODY + SIDEBAR -->
    <div class="post-layout">
      <main class="post-content">
        <slot />

        <div class="post-meta">
          {category && <span class="category">{category}</span>}
          <time datetime={pubDate.toISOString()}>
            {pubDate.toLocaleDateString()}
          </time>
        </div>

        <div class="post-nav">
          <p class="label">Previous Article</p>
          <a href="/">Where ROM Hacks Actually Cross the Legal Line</a>
        </div>
      </main>

      <aside class="post-sidebar">
        <section class="widget">
          <h3>Search</h3>
          <input type="text" placeholder="Search..." />
          <button>Search</button>
        </section>

        <section class="widget">
          <h3>About</h3>
          <p>
            Retro Gaming Verse is a personal journal about time spent with retro
            games and retro-style indie games, written slowly and thoughtfully.
          </p>
        </section>

        <section class="widget">
          <h3>More from this game</h3>
          <p>Pok√©mon The Last FireRed Playthrough</p>
        </section>
      </aside>
    </div>
  </article>
</BaseLayout>

<style>
.post {
  max-width: 1200px;
  margin: 0 auto;
  padding: 4rem 1.5rem;
}

.post-hero {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: center;
  margin-bottom: 5rem;
}

.hero-text h1 {
  font-size: 3rem;
  line-height: 1.2;
  margin-bottom: 1.5rem;
}

.excerpt {
  font-size: 1.1rem;
  color: #555;
  margin-bottom: 1.5rem;
}

.category {
  display: inline-block;
  padding: 0.4rem 0.8rem;
  border-radius: 999px;
  background: #eef;
  font-size: 0.8rem;
}

.hero-image img {
  width: 100%;
  height: auto;
  border-radius: 20px;
  display: block;
}

.post-layout {
  display: grid;
  grid-template-columns: minmax(0, 700px) 300px;
  gap: 3rem;
}

.post-content {
  line-height: 1.75;
}

.post-content p {
  margin-bottom: 1.5rem;
}

.post-meta {
  margin-top: 3rem;
  display: flex;
  gap: 1rem;
  font-size: 0.9rem;
  color: #777;
}

.post-nav {
  margin-top: 3rem;
  padding: 2rem;
  background: #f7f8ff;
  border-radius: 16px;
}

.post-sidebar .widget {
  background: #fff;
  padding: 1.5rem;
  border-radius: 16px;
  margin-bottom: 2rem;
}

.post-sidebar input {
  width: 100%;
  padding: 0.6rem;
  margin-bottom: 0.75rem;
}

.post-sidebar button {
  width: 100%;
  padding: 0.6rem;
  background: #6c63ff;
  color: white;
  border: none;
  border-radius: 8px;
}
</style>
