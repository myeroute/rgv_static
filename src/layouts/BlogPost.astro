---
const { post } = Astro.props;
const {
  title,
  description,
  heroImage,
  category,
  pubDate,
} = post.data;
---

<article class="blog-post">

  <!-- HERO -->
  {heroImage && (
    <div class="hero">
      <img src={heroImage} alt={title} />
    </div>
  )}

  <!-- HEADER -->
  <header class="post-header">
    <a class="author">Steven</a>
    <h1>{title}</h1>
    {description && <p class="excerpt">{description}</p>}

    {category && (
      <span class="tag">{category}</span>
    )}
  </header>

  <!-- CONTENT + SIDEBAR -->
  <div class="post-layout">
    <main class="content">
      <slot />
    </main>

    <aside class="sidebar">
      <section class="widget">
        <h3>Search</h3>
        <input type="text" placeholder="Search..." />
        <button>Search</button>
      </section>

      <section class="widget">
        <h3>About</h3>
        <p>
          Retro Gaming Verse is a personal journal about time spent
          with retro games and retro-style indie games.
        </p>
      </section>
    </aside>
  </div>

</article>

<style>
.blog-post {
  max-width: 1200px;
  margin: 0 auto;
  padding: 4rem 2rem;
}

.hero img {
  width: 100%;
  border-radius: 16px;
}

.post-header {
  max-width: 720px;
  margin-top: 3rem;
}

.post-header h1 {
  font-size: 3rem;
  line-height: 1.2;
}

.excerpt {
  color: #666;
  margin-top: 1rem;
}

.tag {
  display: inline-block;
  margin-top: 1.5rem;
  padding: 0.4rem 0.9rem;
  border-radius: 999px;
  background: #f2f2ff;
  font-size: 0.85rem;
}

.post-layout {
  display: grid;
  grid-template-columns: 1fr 320px;
  gap: 3rem;
  margin-top: 4rem;
}

.content {
  max-width: 720px;
}

.sidebar .widget {
  background: #fafafa;
  padding: 1.5rem;
  border-radius: 16px;
  margin-bottom: 2rem;
}
</style>
