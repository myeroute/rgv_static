---
import Sidebar from "../components/Sidebar.astro";

const {
  sidebar = "default", // "default" | "post"
} = Astro.props;
---

<div class="layout">
  <main class="content">
    <slot />
  </main>

  {sidebar !== "post" && (
    <aside class="sidebar-right">
      <Sidebar />
    </aside>
  )}
</div>

<style>
.layout {
  display: grid;
  grid-template-columns: minmax(0, 1fr) 320px;
  gap: 2rem;
  align-items: start;
}

.sidebar-right {
  position: relative;
}
</style>
