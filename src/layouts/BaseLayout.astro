---
import Sidebar from "../components/Sidebar.astro";

const {
  sidebar = "default", // "default" | "post"
  post = null,
} = Astro.props;
---

<div class="layout">
  <main class="content">
    <slot />
  </main>

  {/* ❌ KHÔNG render sidebar bên phải cho blog post */}
  {sidebar !== "post" && (
    <aside class="sidebar-right">
      <Sidebar />
    </aside>
  )}
</div>

<style>
.layout {
  display: grid;
  grid-template-columns: 1fr 320px;
  gap: 2rem;
}

.sidebar-right {
  align-self: start;
}
</style>
