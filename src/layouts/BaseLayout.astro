---
const { title = "Retro Gaming Verse", sidebar = null } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="container">
        <h1>Retro Gaming Verse</h1>
      </div>
    </header>

    <div class="container">
      {sidebar ? (
        <div class="layout-with-sidebar">
          <main>
            <slot />
          </main>
          <aside>
            {sidebar}
          </aside>
        </div>
      ) : (
        <main>
          <slot />
        </main>
      )}
    </div>

    <footer>
      <div class="container">
        <p>Â© Retro Gaming Verse</p>
      </div>
    </footer>
  </body>
</html>

<style>
.container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 1rem;
}

.layout-with-sidebar {
  display: grid;
  grid-template-columns: minmax(0, 1fr) 300px;
  gap: 2rem;
  align-items: start;
}

header,
footer {
  padding: 1rem 0;
}
</style>
