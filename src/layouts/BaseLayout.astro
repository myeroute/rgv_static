---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'Retro Gaming Verse',
  description = 'Timeless play experiences with retro games and retro-style indie games.',
  canonical = Astro.url.href,
  noindex = true, // đang test → chặn index
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    {noindex && (
      <meta name="robots" content="noindex, nofollow" />
    )}

    <!-- chỗ cho page inject thêm head nếu cần -->
    <slot name="head" />
  </head>

  <body>
    <Header />

    <main class="site-main">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  .site-main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.25rem;
  }
</style>
<style is:global>
  /* ====== TYPOGRAPHY NỀN ====== */

  :root {
    --text-main: #1f1f1f;
    --text-muted: #666;
    --text-light: #888;
    --border-light: #eee;
    --bg-main: #fff;
  }

  html {
    font-size: 16px;
  }

  body {
    margin: 0;
    font-family: system-ui, -apple-system, BlinkMacSystemFont,
      "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    line-height: 1.75;
    color: var(--text-main);
    background: var(--bg-main);
    -webkit-font-smoothing: antialiased;
    text-rendering: optimizeLegibility;
  }

  /* ====== HEADINGS ====== */

  h1, h2, h3, h4 {
    font-weight: 500;
    line-height: 1.4;
    color: var(--text-main);
  }

  h1 {
    font-size: 2.2rem;
    margin: 3.5rem 0 3rem;
  }

  h2 {
    font-size: 1.5rem;
  }

  /* ====== LINKS ====== */

  a {
    color: inherit;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* ====== TEXT ====== */

  p {
    margin: 0 0 1.25rem;
    color: var(--text-muted);
  }

  /* ====== LIST RESET (cho homepage list sạch) ====== */

  ul, ol {
    padding-left: 1.2rem;
  }

  /* ====== IMAGE DEFAULT ====== */

  img {
    max-width: 100%;
    height: auto;
  }
</style>
