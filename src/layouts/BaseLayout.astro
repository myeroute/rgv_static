---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'Retro Gaming Verse',
  description = 'Timeless play experiences with retro games and retro-style indie games.',
  canonical = Astro.url.href,
  noindex = true, // đang test → chặn index
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <header class="site-header">
      <div class="header-inner">
        <div class="site-logo">
          <a href="/">Retro Gaming Verse</a>
        </div>

        <nav class="site-nav">
          <a href="/">Home</a>
          <a href="/retro-games/">Retro Games</a>
          <a href="/retro-style-indie-games/">Retro-Style Indie Games</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>
  </body>

  <style is:global>
    body {
      margin: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont,
        "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.7;
      color: #222;
    }

    /* ===== HEADER ===== */

    .site-header {
      border-bottom: 1px solid #eee;
    }

    .header-inner {
      max-width: 1100px;
      margin: 0 auto;
      padding: 1.25rem 1rem;
      display: grid;
      grid-template-columns: auto 1fr;
      align-items: center;
    }

    .site-logo a {
      font-size: 1.15rem;
      font-weight: 600;
      text-decoration: none;
      color: inherit;
    }

    .site-nav {
      display: flex;
      justify-content: center;
      gap: 2rem;
    }

    .site-nav a {
      text-decoration: none;
      font-size: 0.95rem;
      color: #333;
    }

    .site-nav a:hover {
      text-decoration: underline;
    }
  </style>
</html>
