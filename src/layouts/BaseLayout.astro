---
import Sidebar from "../components/Sidebar.astro";

const {
  sidebar = "default",
  post = null,
} = Astro.props;
---

<div class="layout">
  <main class="content">
    <slot />
  </main>

  <aside class="sidebar-right">
    <Sidebar post={post} />
  </aside>
</div>

<style>
.layout {
  display: grid;
  grid-template-columns: minmax(0, 1fr) 320px;
  gap: 2rem;
  align-items: start;
}

.sidebar-right {
  position: relative;
}
</style>
