---
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';
import '../styles/post-card.css';

const {
  title = 'Retro Gaming Verse',
  description = 'Timeless play experiences with retro games and retro-style indie games.',
  canonical = Astro.url.href,
  noindex = true,

  sidebar = null, // 'home' | 'post' | null
  post = null,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <!-- HEADER -->
    <header class="site-header">
      <div class="header-inner">
        <div class="site-logo">
          <a href="/">Retro Gaming Verse</a>
        </div>

        <nav class="site-nav">
          <a href="/">Home</a>
          <a href="/retro-games/">Retro Games</a>
          <a href="/retro-style-indie-games/">Retro-Style Indie Games</a>
        </nav>

        <!-- SEARCH ICON -->
        <div class="header-search">
          <a href="/search/" aria-label="Search">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </a>
        </div>
      </div>
    </header>

    <!-- MAIN -->
    {sidebar ? (
      <div class="layout-with-sidebar">
        <main class="layout-content">
          <slot />
        </main>

        <aside class="layout-sidebar">
          <Sidebar variant={sidebar} post={post} />
        </aside>
      </div>
    ) : (
      <main>
        <slot />
      </main>
    )}

    <!-- FOOTER -->
    <footer class="site-footer">
      <div class="footer-inner">
        <div class="footer-about">
          <h4>Retro Gaming Verse</h4>
          <p>
            Timeless play experiences. A place to document real experiences with
            retro games and retro-inspired indie games, played slowly and
            without rushing.
          </p>
          <p class="footer-copy">
            Â© 2026 Retro Gaming Verse. All rights reserved.
          </p>
        </div>

        <div class="footer-links">
          <h4>Helpful Links</h4>
          <a href="/about/">About</a>
          <a href="/contact/">Contact</a>
        </div>

        <div class="footer-links">
          <h4>Policies</h4>
          <a href="/privacy-policy/">Privacy Policy</a>
          <a href="/terms-of-service/">Terms of Service</a>
          <a href="/disclaimer/">Disclaimer</a>
        </div>
      </div>
    </footer>
  </body>

  <style is:global>
    body {
      margin: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont,
        "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
      line-height: 1.7;
      color: #222;
    }

    /* ===== HEADER ===== */

    .site-header {
      border-bottom: 1px solid #eee;
    }

    .header-inner {
      max-width: 1100px;
      margin: 0 auto;
      padding: 1.25rem 1rem;
      display: grid;
      grid-template-columns: auto 1fr auto;
      align-items: center;
    }

    .site-logo a {
      font-size: 1.15rem;
      font-weight: 600;
      text-decoration: none;
      color: inherit;
    }

    .site-nav {
      display: flex;
      justify-content: center;
      gap: 2rem;
    }

    .site-nav a {
      text-decoration: none;
      font-size: 0.95rem;
      color: #333;
    }

    .site-nav a:hover {
      text-decoration: underline;
    }

    .header-search a {
      display: flex;
      align-items: center;
      color: #333;
    }

    .header-search a:hover {
      opacity: 0.7;
    }

    /* ===== LAYOUT WITH SIDEBAR ===== */

    .layout-with-sidebar {
      max-width: 1100px;
      margin: 0 auto;
      padding: 2.5rem 1rem;
      display: grid;
      grid-template-columns: minmax(0, 1fr) 300px;
      gap: 3rem;
    }

    .layout-content {
      min-width: 0;
    }

    .layout-sidebar {
      min-width: 0;
    }

    /* ===== FOOTER ===== */

    .site-footer {
      margin-top: 5rem;
      padding: 4rem 1rem;
      background: #fafbff;
      border-top: 1px solid #eee;
    }

    .footer-inner {
      max-width: 1100px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 2fr 1fr 1fr;
      gap: 3rem;
    }

    .site-footer h4 {
      margin-top: 0;
      margin-bottom: 1rem;
      font-size: 1rem;
    }

    .site-footer p {
      font-size: 0.95rem;
      color: #666;
      margin: 0 0 1rem;
      line-height: 1.6;
    }

    .footer-copy {
      margin-top: 1.5rem;
      font-size: 0.85rem;
      color: #999;
    }

    .footer-links a {
      display: block;
      font-size: 0.9rem;
      color: #555;
      text-decoration: none;
      margin-bottom: 0.6rem;
    }

    .footer-links a:hover {
      text-decoration: underline;
    }
  </style>
</html>
