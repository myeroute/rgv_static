---
import BaseLayout from "./BaseLayout.astro";

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <main class="static-page">
    <article class="static-content">
      <slot />
    </article>
  </main>
</BaseLayout>

<style>
.static-page {
  padding: 3.5rem 0;
}

/* rộng hơn blog post, giống page thông tin */
.static-content {
  max-width: 860px;
  margin: 0 auto;
  padding: 0 1.5rem;
}

.static-content h1 {
  font-size: 2.4rem;
  margin-bottom: 2.5rem;
}

.static-content h2 {
  font-size: 1.5rem;
  margin-top: 3rem;
  margin-bottom: 1rem;
}

.static-content p {
  line-height: 1.75;
  margin-bottom: 1.25rem;
}

.static-content ul {
  padding-left: 1.25rem;
  margin-bottom: 1.75rem;
}

.static-content li {
  margin-bottom: 0.6rem;
}
</style>
