---
const { title, excerpt, image, url } = Astro.props;
---

<article class="post-card">
  <a href={url} class="post-card__link">
    {image && (
      <figure class="post-card__image">
        <img src={image} alt={title} loading="lazy" />
      </figure>
    )}

    <h2 class="post-card__title">{title}</h2>

    {excerpt && (
      <p class="post-card__excerpt">
        {excerpt}
      </p>
    )}

    <span class="post-card__read">
      Read â†’
    </span>
  </a>
</article>

<style>
.post-card {
  padding: 2.5rem 0;
  border-bottom: 1px solid #eee;
}

.post-card__link {
  text-decoration: none;
  color: inherit;
  display: block;
  max-width: 680px;
}

.post-card__image {
  margin: 0 0 1.25rem;
}

.post-card__image img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 6px;
}

.post-card__title {
  font-size: 1.35rem;
  line-height: 1.45;
  margin: 0 0 0.75rem;
  font-weight: 600;
}

.post-card__excerpt {
  font-size: 1rem;
  line-height: 1.7;
  color: #555;
  margin: 0 0 0.75rem;
}

.post-card__read {
  font-size: 0.9rem;
  color: #6b5cff;
}
</style>
