---
const { title, excerpt, image, url } = Astro.props;
---

<article class="post-card">
  <a href={url} class="post-card__link">
    {image && (
      <div class="post-card__thumb">
        <img src={image} alt={title} loading="lazy" />
      </div>
    )}

    <div class="post-card__content">
      <h2 class="post-card__title">{title}</h2>

      {excerpt && (
        <p class="post-card__excerpt">
          {excerpt}
        </p>
      )}

      <span class="post-card__read">
        Read â†’
      </span>
    </div>
  </a>
</article>

<style>
/* ====== CARD WRAPPER ====== */

.post-card {
  padding: 2.75rem 0;
  border-bottom: 1px solid #eee;
}

/* ====== GRID LAYOUT (QUAN TRá»ŒNG) ====== */

.post-card__link {
  display: grid;
  grid-template-columns: 240px 1fr; /* thumbnail | text */
  gap: 1.75rem;
  align-items: stretch; /* ðŸ”‘ áº£nh stretch theo text */
  text-decoration: none;
  color: inherit;
}

/* ====== THUMBNAIL ====== */

.post-card__thumb {
  position: relative;
  overflow: hidden;
  border-radius: 4px;
}

.post-card__thumb img {
  width: 100%;
  height: 100%;          /* ðŸ”‘ áº£nh cao báº±ng text */
  object-fit: cover;     /* crop giá»‘ng WordPress */
  display: block;
}

/* ====== CONTENT ====== */

.post-card__content {
  max-width: 440px;
}

.post-card__title {
  font-size: 1.3rem;
  line-height: 1.4;
  margin: 0 0 0.75rem;
  font-weight: 600;
}

.post-card__excerpt {
  font-size: 0.95rem;
  line-height: 1.65;
  margin: 0 0 0.75rem;
  color: #666;
}

/* ====== READ BUTTON (GIáº¢ WP) ====== */

.post-card__read {
  display: inline-block;
  margin-top: auto;
  font-size: 0.9rem;
  color: #555;
}
</style>
