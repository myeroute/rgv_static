---
const { title, excerpt, image, url } = Astro.props;
---

<article class="post-card">
  <a href={url} class="post-card__link">
    {image && (
      <div class="post-card__thumb">
        <img src={image} alt={title} loading="lazy" />
      </div>
    )}

    <div class="post-card__content">
      <h2 class="post-card__title">{title}</h2>

      {excerpt && (
        <p class="post-card__excerpt">
          {excerpt}
        </p>
      )}

      <span class="post-card__button">
        Read More
      </span>
    </div>
  </a>
</article>

<style>
/* ====== CARD ====== */

.post-card {
  padding: 2.75rem 0;
  border-bottom: 1px solid #eee;
}

/* ====== GRID ====== */

.post-card__link {
  display: grid;
  grid-template-columns: 240px 1fr;
  gap: 1.75rem;
  align-items: stretch;
  text-decoration: none;
  color: inherit;
}

/* ====== THUMB ====== */

.post-card__thumb {
  overflow: hidden;
  border-radius: 4px;
}

.post-card__thumb img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* ====== CONTENT ====== */

.post-card__content {
  max-width: 440px;
}

.post-card__title {
  font-size: 1.3rem;
  line-height: 1.4;
  margin: 0 0 0.75rem;
  font-weight: 600;
}

.post-card__excerpt {
  font-size: 0.95rem;
  line-height: 1.65;
  margin: 0 0 1rem;
  color: #666;
}

/* ====== WORDPRESS-STYLE BUTTON ====== */

.post-card__button {
  display: inline-block;
  padding: 0.45rem 0.85rem;
  font-size: 0.85rem;
  font-weight: 500;

  background: #6b5cff;        /* giống WP accent */
  color: #fff;

  border-radius: 4px;
}

/* hover rất nhẹ */
.post-card__link:hover .post-card__button {
  opacity: 0.9;
}
</style>
