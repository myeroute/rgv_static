---
const { title, excerpt, image, url } = Astro.props;
---

<article class="post-card">
  <a href={url} class="post-card__link">
    {image && (
      <div class="post-card__thumb">
        <img src={image} alt={title} loading="lazy" />
      </div>
    )}

    <div class="post-card__content">
      <h2 class="post-card__title">{title}</h2>

      {excerpt && (
        <p class="post-card__excerpt">
          {excerpt}
        </p>
      )}

      <span class="post-card__read">
        Read â†’
      </span>
    </div>
  </a>
</article>

<style>
/* ====== WRAPPER ====== */

.post-card {
  padding: 2.5rem 0;
  border-bottom: 1px solid #eee;
}

/* ====== LINK ====== */

.post-card__link {
  display: flex;
  gap: 1.5rem;
  text-decoration: none;
  color: inherit;
  align-items: flex-start;
}

/* ====== THUMBNAIL ====== */

.post-card__thumb {
  flex-shrink: 0;
  width: 220px;
}

.post-card__thumb img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 4px;
}

/* ====== CONTENT ====== */

.post-card__content {
  max-width: 420px;
}

.post-card__title {
  font-size: 1.25rem;
  line-height: 1.4;
  margin: 0 0 0.6rem;
  font-weight: 600;
}

.post-card__excerpt {
  font-size: 0.95rem;
  line-height: 1.65;
  margin: 0 0 0.6rem;
  color: #666;
}

/* ====== READ LINK ====== */

.post-card__read {
  font-size: 0.9rem;
  color: #555;
}
</style>
