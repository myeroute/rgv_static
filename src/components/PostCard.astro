---
const {
  title,
  excerpt,
  image,
  slug,
} = Astro.props;

// Bắt buộc phải có slug
if (!slug) {
  throw new Error("PostCard: missing slug");
}

const postUrl = `/${slug}`;
---

<article class="post-card">
  <a href={postUrl} class="post-card__link">
    {image && (
      <div class="post-card__thumb">
        <img
          src={image}
          alt={title}
          loading="lazy"
        />
      </div>
    )}

    <div class="post-card__content">
      <h2 class="post-card__title">{title}</h2>

      {excerpt && (
        <p class="post-card__excerpt">
          {excerpt}
        </p>
      )}

      <span class="post-card__button">
        Read More →
      </span>
    </div>
  </a>
</article>
