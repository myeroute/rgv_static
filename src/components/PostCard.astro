---
const { post } = Astro.props;

if (!post) {
  throw new Error('PostCard: post is undefined');
}

const title = post.data.title;
const description = post.data.description;
const image = post.data.image;
const slug = post.slug;

if (!slug) {
  throw new Error('PostCard: missing slug');
}
---

<article class="post-card">
  {image && (
    <a href={`/${slug}`} class="thumb">
      <img src={image} alt={title} loading="lazy" />
    </a>
  )}

  <div class="content">
    <h2 class="title">
      <a href={`/${slug}`}>{title}</a>
    </h2>

    {description && <p class="excerpt">{description}</p>}

    <a class="read-more" href={`/${slug}`}>Read More â†’</a>
  </div>
</article>

<style>
.post-card {
  display: flex;
  gap: 1.5rem;
  align-items: flex-start;
}

.thumb img {
  width: 260px;
  height: auto;
  border-radius: 8px;
}

.content {
  max-width: 640px;
}

.title {
  font-size: 1.4rem;
  margin: 0 0 0.5rem;
}

.excerpt {
  margin-bottom: 0.75rem;
}

.read-more {
  font-weight: 500;
}
</style>
