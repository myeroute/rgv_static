---
/**
 * PostCard – VARIANT VERSION
 * - list (default): homepage, flow đọc
 * - grid: category, archive
 * - KHÔNG phát minh component
 * - KHÔNG đoán context
 */

const { post, variant = "list" } = Astro.props;

// Guard mềm
if (!post) {
  return null;
}

const slug = post.slug ?? "";
const data = post.data ?? {};

const title = data.title ?? "Untitled";
const description = data.description ?? "";
const heroImage = data.heroImage ?? null;
const pubDate = data.pubDate ?? null;
---

<article class={`post-card post-card--${variant}`}>
  {heroImage && (
    <a href={`/${slug}/`} class="post-card-thumb">
      <img
        src={heroImage}
        alt={title}
        loading="lazy"
      />
    </a>
  )}

  <div class="post-card-body">
    <h2 class="post-card-title">
      <a href={`/${slug}/`}>{title}</a>
    </h2>

    {description && (
      <p class="post-card-desc">{description}</p>
    )}

    {pubDate && (
      <time class="post-card-date">
        {new Date(pubDate).toLocaleDateString()}
      </time>
    )}
  </div>
</article>

<style>
/* =====================
   BASE
===================== */
.post-card {
  margin-bottom: 32px;
}

.post-card-thumb img {
  width: 100%;
  display: block;
}

.post-card-title {
  margin: 0 0 8px;
  font-size: 1.15rem;
}

.post-card-desc {
  margin: 0;
  font-size: 0.95rem;
  opacity: 0.85;
}

.post-card-date {
  display: block;
  margin-top: 6px;
  font-size: 0.8rem;
  opacity: 0.6;
}

/* =====================
   LIST VARIANT (HOMEPAGE)
===================== */
.post-card--list {
  display: grid;
  grid-template-columns: 160px 1fr;
  gap: 16px;
  align-items: start;
}

.post-card--list .post-card-thumb img {
  border-radius: 4px;
}

/* =====================
   GRID VARIANT (CATEGORY)
===================== */
.post-card--grid {
  display: flex;
  flex-direction: column;
}

.post-card--grid .post-card-thumb {
  margin-bottom: 12px;
}

.post-card--grid .post-card-thumb img {
  aspect-ratio: 16 / 9;
  object-fit: cover;
  border-radius: 6px;
}

.post-card--grid .post-card-body {
  display: flex;
  flex-direction: column;
}
</style>
