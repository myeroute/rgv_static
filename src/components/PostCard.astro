---
/**
 * PostCard – HOMEPAGE READ MORE ENABLED
 * - Homepage (list): large image + Read More
 * - Category (grid): untouched
 */

const { post, variant = "list" } = Astro.props;
if (!post) return null;

const slug = post.slug ?? "";
const data = post.data ?? {};

const title = data.title ?? "Untitled";
const description = data.description ?? "";
const heroImage = data.heroImage ?? null;
---

<article class={`post-card post-card--${variant}`}>
  {heroImage && (
    <a href={`/${slug}/`} class="post-card-thumb" aria-label={title}>
      <img src={heroImage} alt={title} loading="lazy" />
    </a>
  )}

  <div class="post-card-body">
    <h2 class="post-card-title">
      <a href={`/${slug}/`} class="post-card-title-link">
        {title}
      </a>
    </h2>

    {description && (
      <p class="post-card-desc">{description}</p>
    )}

    <a href={`/${slug}/`} class="post-card-button">
      Read More
    </a>
  </div>
</article>

<style>
/* ===== RESET LINK DEFAULT ===== */
.post-card a {
  color: inherit;
  text-decoration: none;
}

/* ===== BASE ===== */
.post-card {
  height: 100%;
}

.post-card-thumb img {
  width: 100%;
  display: block;
}

/* ===== BODY FLEX ===== */
.post-card-body {
  display: flex;
  flex-direction: column;
}

/* ===== TYPOGRAPHY ===== */
.post-card-title {
  margin: 0 0 0.75rem;
  font-size: 1.35rem;
  line-height: 1.35;
  font-weight: 600;
}

.post-card-title-link {
  color: #111;
}

.post-card-title-link:hover {
  text-decoration: underline;
}

.post-card-desc {
  margin: 0 0 1.25rem;
  font-size: 1rem;
  line-height: 1.65;
  color: #444;
}

/* ===== CTA ===== */
.post-card-button {
  align-self: flex-start;
  padding: 0.55rem 1.25rem;
  background: #6b5cff;
  color: #fff;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: 500;
  white-space: nowrap;
}

.post-card-button:hover {
  opacity: 0.9;
}

/* ===== LIST (HOMEPAGE) ===== */
.post-card--list {
  display: grid;
  grid-template-columns: 360px 1fr;
  gap: 28px;
  margin-bottom: 48px;
}

.post-card--list .post-card-thumb img {
  aspect-ratio: 16 / 9;
  object-fit: cover;
  border-radius: 8px;
}

/* ===== GRID (CATEGORY) – DO NOT TOUCH ===== */
.post-card--grid {
  display: flex;
  flex-direction: column;
}

.post-card--grid .post-card-thumb img {
  aspect-ratio: 16 / 9;
  object-fit: cover;
  border-radius: 6px;
}
</style>
