---
/**
 * PostCard â€“ FINAL ABSOLUTE
 * - No date rendering
 * - Clean archive typography
 * - Font inherits from global CSS
 */

const { post, variant = "list" } = Astro.props;
if (!post) return null;

const slug = post.slug ?? "";
const data = post.data ?? {};

const title = data.title ?? "Untitled";
const description = data.description ?? "";
const heroImage = data.heroImage ?? null;
---

<article class={`post-card post-card--${variant}`}>
  {heroImage && (
    <a href={`/${slug}/`} class="post-card-thumb" aria-label={title}>
      <img src={heroImage} alt={title} loading="lazy" />
    </a>
  )}

  <div class="post-card-body">
    <h2 class="post-card-title">
      <a href={`/${slug}/`} class="post-card-title-link">
        {title}
      </a>
    </h2>

    {description && (
      <p class="post-card-desc">{description}</p>
    )}

    <a href={`/${slug}/`} class="post-card-button">
      Read More
    </a>
  </div>
</article>

<style>
/* =====================
   RESET LINK DEFAULTS
===================== */
.post-card a {
  color: inherit;
  text-decoration: none;
}

/* =====================
   BASE TYPOGRAPHY
===================== */
.post-card {
  height: 100%;
}

.post-card-thumb img {
  width: 100%;
  display: block;
}

.post-card-title {
  margin: 0 0 0.75rem;
  font-size: 1.2rem;
  line-height: 1.35;
  font-weight: 600;
}

.post-card-desc {
  margin: 0 0 1.25rem;
  font-size: 0.95rem;
  line-height: 1.6;
  color: #444;
}

/* =====================
   TITLE LINK
===================== */
.post-card-title-link {
  color: #111;
}

.post-card-title-link:hover {
  text-decoration: underline;
}

/* =====================
   CTA BUTTON
===================== */
.post-card-button {
  align-self: flex-start;
  display: inline-block;
  padding: 0.55rem 1.25rem;
  background: #6b5cff;
  color: #fff;              /* ðŸ”’ always white */
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: 500;
  white-space: nowrap;
}

.post-card-button:hover {
  opacity: 0.9;
}

/* =====================
   LIST (HOMEPAGE)
===================== */
.post-card--list {
  display: grid;
  grid-template-columns: 160px 1fr;
  gap: 16px;
  margin-bottom: 32px;
}

.post-card--list .post-card-button {
  display: none;
}

/* =====================
   GRID (CATEGORY / ARCHIVE)
===================== */
.post-card--grid {
  display: flex;
  flex-direction: column;
}

.post-card--grid .post-card-thumb img {
  aspect-ratio: 16 / 9;
  object-fit: cover;
  border-radius: 6px;
}

.post-card--grid .post-card-body {
  display: flex;
  flex-direction: column;
  padding-top: 1rem;
}
</style>
