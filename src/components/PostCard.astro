---
/**
 * PostCard â€“ FINAL ARCHIVE VERSION
 * variant:
 * - list (default): homepage list
 * - grid: WordPress-style archive card
 */

const { post, variant = "list" } = Astro.props;

if (!post) return null;

const slug = post.slug ?? "";
const data = post.data ?? {};

const title = data.title ?? "Untitled";
const description = data.description ?? "";
const heroImage = data.heroImage ?? null;
const pubDate = data.pubDate ?? null;
---

<article class={`post-card post-card--${variant}`}>
  {heroImage && (
    <a href={`/${slug}/`} class="post-card-thumb">
      <img src={heroImage} alt={title} loading="lazy" />
    </a>
  )}

  <div class="post-card-body">
    <h2 class="post-card-title">
      <a href={`/${slug}/`}>{title}</a>
    </h2>

    {description && (
      <p class="post-card-desc">{description}</p>
    )}

    <a href={`/${slug}/`} class="post-card-button">
      Read More
    </a>

    {pubDate && (
      <time class="post-card-date">
        {new Date(pubDate).toLocaleDateString()}
      </time>
    )}
  </div>
</article>

<style>
/* =====================
   BASE
===================== */
.post-card {
  height: 100%;
}

.post-card-thumb img {
  width: 100%;
  display: block;
}

.post-card-title {
  margin: 0 0 0.75rem;
  font-size: 1.15rem;
}

.post-card-desc {
  margin: 0 0 1.25rem;
  font-size: 0.95rem;
  line-height: 1.6;
  opacity: 0.9;
}

.post-card-button {
  margin-top: auto;
  display: inline-block;
  padding: 0.6rem 1.2rem;
  background: #6b5cff;
  color: #fff;
  border-radius: 6px;
  font-size: 0.9rem;
  text-decoration: none;
}

.post-card-button:hover {
  opacity: 0.9;
}

.post-card-date {
  display: block;
  margin-top: 0.75rem;
  font-size: 0.8rem;
  opacity: 0.6;
}

/* =====================
   LIST (HOMEPAGE)
===================== */
.post-card--list {
  display: grid;
  grid-template-columns: 160px 1fr;
  gap: 16px;
  margin-bottom: 32px;
}

.post-card--list .post-card-button {
  display: none;
}

/* =====================
   GRID (CATEGORY / ARCHIVE)
===================== */
.post-card--grid {
  display: flex;
  flex-direction: column;
}

.post-card--grid .post-card-thumb img {
  aspect-ratio: 16 / 9;
  object-fit: cover;
  border-radius: 6px;
}

.post-card--grid .post-card-body {
  display: flex;
  flex-direction: column;
  padding-top: 1rem;
}
</style>
