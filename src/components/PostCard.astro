---
const { title, excerpt, image, url } = Astro.props;
---

<article class="post-card">
  <a href={url} class="post-card__link">
    {image && (
      <figure class="post-card__image">
        <img src={image} alt={title} loading="lazy" />
      </figure>
    )}

    <h2 class="post-card__title">{title}</h2>

    {excerpt && (
      <p class="post-card__excerpt">
        {excerpt}
      </p>
    )}
  </a>
</article>

<style>
/* --- Nhịp dọc chung --- */
.post-card {
  padding: 3.5rem 0;
}

/* --- Link bao toàn bài --- */
.post-card__link {
  display: block;
  text-decoration: none;
  color: inherit;
  max-width: 680px;
}

/* --- Ảnh: giảm dominance --- */
.post-card__image {
  margin: 0 0 2.25rem;
}

.post-card__image img {
  width: 100%;
  height: auto;
  display: block;

  /* Làm ảnh “lùi lại” */
  opacity: 0.92;
  filter: saturate(0.95) contrast(0.97);

  border-radius: 4px;
}

/* --- Title: trở thành điểm dẫn chính --- */
.post-card__title {
  font-size: 1.55rem;
  line-height: 1.45;
  margin: 0 0 0.9rem;
  font-weight: 500;
}

/* --- Excerpt: rất nhẹ --- */
.post-card__excerpt {
  font-size: 1rem;
  line-height: 1.75;
  margin: 0;
  color: #666;
  max-width: 38rem;
}

/* --- Tách bài cực nhẹ --- */
.post-card + .post-card {
  border-top: 1px solid #f0f0f0;
}
</style>
