---
/**
 * PostCard ‚Äì WORDPRESS-STYLE LIST & GRID
 */

const { post, variant = "list" } = Astro.props;
if (!post) return null;

const slug = post.slug ?? "";
const data = post.data ?? {};

const title = data.title ?? "Untitled";
const description = data.description ?? "";
const heroImage = data.heroImage ?? null;
---

<article class={`post-card post-card--${variant}`}>
  {heroImage && (
    <a href={`/${slug}/`} class="post-card-thumb" aria-label={title}>
      <img src={heroImage} alt={title} loading="lazy" />
    </a>
  )}

  <div class="post-card-body">
    <h2 class="post-card-title">
      <a href={`/${slug}/`} class="post-card-title-link">
        {title}
      </a>
    </h2>

    {description && (
      <p class="post-card-desc">{description}</p>
    )}

    <a href={`/${slug}/`} class="post-card-button">
      Read More
    </a>
  </div>
</article>

<style>
/* ===== RESET ===== */
.post-card a {
  color: inherit;
  text-decoration: none;
}

/* ===== BASE ===== */
.post-card {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* ===== THUMB ===== */
.post-card-thumb {
  width: 100%;
  overflow: hidden;
}

.post-card-thumb img {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

/* ===== BODY ===== */
.post-card-body {
  display: flex;
  flex-direction: column;
  flex: 1; /* üîë √©p body gi√£n h·∫øt chi·ªÅu cao card */
}

/* ===== TYPOGRAPHY ===== */
.post-card-title {
  margin: 1rem 0 0.75rem;
  font-size: 1.35rem;
  line-height: 1.35;
  font-weight: 600;
}

.post-card-desc {
  margin: 0 0 1.25rem;
  font-size: 1rem;
  line-height: 1.65;
  color: #444;

  /* üîí KH√ìA CHI·ªÄU CAO TEXT */
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* ===== CTA ===== */
.post-card-button {
  margin-top: auto; /* üîë n√∫t lu√¥n xu·ªëng ƒë√°y */
  align-self: flex-start;
  padding: 0.55rem 1.25rem;
  background: #6b5cff;
  color: #fff;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: 500;
}

/* ===== LIST (HOMEPAGE) ===== */
.post-card--list {
  display: grid;
  grid-template-columns: 360px 1fr;
  gap: 28px;
  margin-bottom: 56px;
  align-items: stretch;
}

.post-card--list .post-card-thumb {
  border-radius: 10px;
}

/* ===== GRID (CATEGORY) ===== */
.post-card--grid {
  height: 100%;
}

.post-card--grid .post-card-thumb {
  aspect-ratio: 16 / 9;
  border-radius: 6px;
}
</style>
