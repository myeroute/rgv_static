---
const { title, excerpt, image, url } = Astro.props;
---

<article class="post-card">
  <a href={url} class="post-card__link">
    {image && (
      <div class="post-card__thumb">
        <img src={image} alt={title} loading="lazy" />
      </div>
    )}

    <div class="post-card__content">
      <h2 class="post-card__title">{title}</h2>

      {excerpt && <p class="post-card__excerpt">{excerpt}</p>}

      <span class="post-card__button">Read More</span>
    </div>
  </a>
</article>

<style>
  .post-card {
    padding: 2.75rem 0;
    border-bottom: 1px solid #eee;
  }

  .post-card__link {
    display: grid;
    grid-template-columns: 240px 1fr;
    gap: 1.75rem;
    text-decoration: none;
    color: inherit;
  }

  .post-card__thumb {
    overflow: hidden;
    border-radius: 4px;
  }

  .post-card__thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-card__title {
    margin: 0 0 0.75rem;
    font-size: 1.3rem;
    font-weight: 600;
  }

  .post-card__excerpt {
    font-size: 0.95rem;
    line-height: 1.65;
    color: #666;
    margin: 0 0 1rem;
  }

  /* Button phồng kiểu WP */
  .post-card__button {
    display: inline-block;
    padding: 0.5rem 0.9rem;
    font-size: 0.85rem;
    font-weight: 500;
    background: linear-gradient(#6f63ff, #5a4fe0);
    color: #fff;
    border-radius: 4px;
    box-shadow:
      0 1px 0 rgba(0,0,0,0.15),
      inset 0 1px 0 rgba(255,255,255,0.25);
  }
</style>
