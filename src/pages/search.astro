---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

/* ================= REPLACE JSON WITHOUT BASE64 ================ */
const rawPosts = await getCollection("blog");
const posts = rawPosts.map((p) => ({
  title: p.data.title,
  description: p.data.description,
  slug: p.slug,
}));
---

<BaseLayout
  title="Search"
  description="Search posts on Retro Gaming Verse"
  sidebar={null}
>
  <section class="search-page">
    <h1>Search</h1>

    <input
      type="text"
      id="search-input"
      placeholder="Type to search posts..."
      autocomplete="off"
      data-posts={JSON.stringify(posts)}  <!-- dataset chứa JSON -->
    />

    <ul id="search-results" class="search-results"></ul>
  </section>

  <!-- ===== SEARCH SCRIPT ===== -->
  <script is:inline>
    (() => {
      const input = document.getElementById("search-input");
      const results = document.getElementById("search-results");
      if (!input || !results) return;

      // Lấy dữ liệu JSON từ dataset
      let POSTS = [];
      try {
        const raw = input.dataset.posts;
        if (raw) {
          POSTS = JSON.parse(raw);
        }
      } catch (err) {
        console.error("Search parse error:", err);
        return;
      }

      function render(list) {
        results.innerHTML = "";
        if (!list.length) {
          results.innerHTML = "<li>No results found.</li>";
          return;
        }
        list.forEach((p) => {
          const li = document.createElement("li");
          li.innerHTML = `
            <a href="/${p.slug}/">
              <strong>${p.title}</strong>
              <div class="desc">${p.description || ""}</div>
            </a>
          `;
          results.appendChild(li);
        });
      }

      function searchQuery(q) {
        const term = q.toLowerCase().trim();
        if (!term || term.length < 2) {
          render([]);
          return;
        }
        const found = POSTS.filter((p) =>
          p.title.toLowerCase().includes(term)
        );
        render(found);
      }

      // Read URL query on load
      const params = new URLSearchParams(window.location.search);
      const qstr = params.get("q") || "";
      if (qstr) {
        input.value = qstr;
        searchQuery(qstr);
      }

      // Live search on input
      input.addEventListener("input", () => {
        searchQuery(input.value);
      });
    })();
  </script>

  <style>
    .search-page {
      max-width: 700px;
      margin: 2rem auto 4rem;
      padding: 0 1rem;
    }
    #search-input {
      width: 100%;
      padding: 0.75rem;
      font-size: 1rem;
      margin-bottom: 1.5rem;
      border: 1px solid #ccc;
      border-radius: 6px;
    }
    .search-results {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    .search-results li {
      margin-bottom: 1.25rem;
    }
    .search-results a {
      text-decoration: none;
      color: inherit;
    }
    .search-results strong {
      display: block;
      font-size: 1.1rem;
      margin-bottom: 0.25rem;
    }
    .search-results .desc {
      font-size: 0.9rem;
      color: #555;
    }
  </style>
</BaseLayout>
