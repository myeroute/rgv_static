---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).map((p) => ({
  title: p.data.title,
  description: p.data.description,
  slug: p.slug,
}));

// Encode JSON posts to Base64
const searchDataBase64 = Buffer.from(JSON.stringify(posts)).toString("base64");
---

<BaseLayout
  title="Search"
  description="Search posts on Retro Gaming Verse"
  sidebar={null}
>
  <section class="search-page">
    <h1>Search</h1>

    <input
      type="text"
      id="search-input"
      placeholder="Type to search posts..."
      autocomplete="off"
    />

    <ul id="search-results" class="search-results"></ul>
  </section>

  <!-- SEARCH DATA BASE64 -->
  <script type="application/json" id="search-data-base64">
    {searchDataBase64}
  </script>

  <!-- SEARCH SCRIPT -->
  <script is:inline>
    (() => {
      const input = document.getElementById("search-input");
      const results = document.getElementById("search-results");
      const dataEl = document.getElementById("search-data-base64");
      if (!input || !results || !dataEl) return;

      // Decode Base64 to string, then JSON.parse
      let POSTS = [];
      try {
        const jsonString = atob(dataEl.textContent.trim());
        POSTS = JSON.parse(jsonString);
      } catch (err) {
        console.error("Search data decode/parse error:", err);
        return;
      }

      function renderList(list) {
        results.innerHTML = "";
        if (!list.length) {
          results.innerHTML = "<li>No results found.</li>";
          return;
        }
        list.forEach((p) => {
          const li = document.createElement("li");
          li.innerHTML = `
            <a href="/${p.slug}/">
              <strong>${p.title}</strong>
              <div class="desc">${p.description || ""}</div>
            </a>
          `;
          results.appendChild(li);
        });
      }

      function doSearch(query) {
        const q = query.toLowerCase().trim();
        if (!q || q.length < 2) {
          renderList([]);
          return;
        }
        const matches = POSTS.filter((p) =>
          p.title.toLowerCase().includes(q)
        );
        renderList(matches);
      }

      // READ q FROM URL ON PAGE LOAD
      const params = new URLSearchParams(window.location.search);
      const qstr = params.get("q") || "";
      if (qstr) {
        input.value = qstr;
        doSearch(qstr);
      }

      // LIVE SEARCH ON INPUT
      input.addEventListener("input", () => {
        doSearch(input.value);
      });
    })();
  </script>

  <style>
    .search-page {
      max-width: 700px;
      margin: 2rem auto 4rem;
      padding: 0 1rem;
    }
    .search-results {
      list-style: none;
      padding: 0;
      margin-top: 1rem;
    }
    .search-results li {
      margin-bottom: 1rem;
    }
    .search-results a {
      text-decoration: none;
      color: inherit;
    }
    .search-results strong {
      display: block;
      font-size: 1.1rem;
    }
    .search-results .desc {
      font-size: 0.9rem;
      color: #555;
    }
    #search-input {
      width: 100%;
      padding: 0.75rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 6px;
    }
  </style>
</BaseLayout>
