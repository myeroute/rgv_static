---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Search"
  description="Search posts on Retro Gaming Verse"
  sidebar={null}
>
  <section class="search-page">
    <h1>Search</h1>

    <form class="search-form">
      <input
        id="search-input"
        type="text"
        placeholder="Type to search posts..."
        autocomplete="off"
      />
    </form>

    <p id="search-meta" class="search-meta" hidden></p>

    <div id="search-results" class="search-results"></div>
  </section>

  <style>
    .search-page {
      max-width: 1200px;
      margin: 2rem auto 4rem;
      padding: 0 1rem;
    }

    .search-form {
      margin-bottom: 1.5rem;
    }

    .search-form input {
      width: 100%;
      padding: 0.75rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 6px;
    }

    .search-meta {
      margin-bottom: 2rem;
      color: #555;
      font-size: 0.95rem;
    }

    /* ===== GRID GIỐNG CATEGORY ===== */
    .search-results {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
      align-items: start;
    }

    /* ===== ÉP CARD KHÔNG TRÀN ===== */
    .search-results .post-card {
      height: 100%;
    }

    .search-results .post-card-thumb {
      width: 100%;
      aspect-ratio: 16 / 9;
      overflow: hidden;
      border-radius: 10px;
    }

    .search-results .post-card-thumb img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    .search-results .post-card-content p {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    /* ===== MOBILE: LIST DỌC ===== */
    @media (max-width: 768px) {
      .search-results {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <script type="module">
    const input = document.getElementById("search-input");
    const resultsEl = document.getElementById("search-results");
    const metaEl = document.getElementById("search-meta");

    const params = new URLSearchParams(window.location.search);
    const initialQuery = params.get("q") || "";
    input.value = initialQuery;

    let indexCache = null;

    async function loadIndex() {
      if (indexCache) return indexCache;
      const res = await fetch("/search-index.json");
      indexCache = await res.json();
      return indexCache;
    }

    function normalize(text) {
      return text.toLowerCase();
    }

    async function runSearch(query) {
      resultsEl.innerHTML = "";
      metaEl.hidden = true;

      if (query.length < 2) return;

      const index = await loadIndex();
      const q = normalize(query);

      const results = index.filter((post) =>
        normalize(post.title).includes(q) ||
        normalize(post.description).includes(q)
      );

      metaEl.textContent = `${results.length} result${results.length !== 1 ? "s" : ""} for “${query}”`;
      metaEl.hidden = false;

      if (results.length === 0) {
        resultsEl.innerHTML = "<p>No results found.</p>";
        return;
      }

      results.forEach((post) => {
        const article = document.createElement("article");
        article.innerHTML = `
          <div class="post-card post-card--grid">
            <a href="/${post.slug}/" class="post-card-thumb">
              <img src="${post.heroImage}" alt="${post.title}" loading="lazy" />
            </a>
            <div class="post-card-content">
              <h2>
                <a href="/${post.slug}/">${post.title}</a>
              </h2>
              <p>${post.description}</p>
              <a href="/${post.slug}/" class="read-more">Read More</a>
            </div>
          </div>
        `;
        resultsEl.appendChild(article);
      });
    }

    input.addEventListener("input", (e) => {
      const q = e.target.value.trim();
      const url = q ? `/search?q=${encodeURIComponent(q)}` : "/search";
      window.history.replaceState({}, "", url);
      runSearch(q);
    });

    if (initialQuery) {
      runSearch(initialQuery);
    }
  </script>
</BaseLayout>
