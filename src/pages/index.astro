      <section class="home-post-list">
        {latestPosts.map((post) => (
          <PostCard post={post} variant="list" />
        ))}
      </section>

      <nav class="pagination">
        <a href="/page/2/">Next â†’</a>
      </nav>
    </div>
  </div>
</BaseLayout>
