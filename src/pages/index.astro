---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import PostCard from '../components/PostCard.astro';
import Sidebar from '../components/Sidebar.astro';

// LẤY TẤT CẢ BÀI
const posts = await getCollection('blog');

// SORT THEO DATE
posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title="Retro Gaming Verse – Slow Play, Deep Experience"
  description="Personal experiences with retro games and retro-style indie games."
>
  <div class="home-layout">
    <main>
      {posts.map((post) => {
        // slug chuẩn: lấy tên file, bỏ folder
        const slug = post.id.replace(/\.mdx?$/, '').split('/').pop();

        return (
          <PostCard
            title={post.data.title}
            excerpt={post.data.description}
            image={post.data.heroImage}
            url={`/${slug}/`}
          />
        );
      })}
    </main>

    <Sidebar variant="home" />
  </div>
</BaseLayout>

<style>
.home-layout {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2.5rem 1rem;
  display: grid;
  grid-template-columns: 1fr 300px;
  gap: 3rem;
}
</style>
